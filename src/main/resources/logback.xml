<configuration scan="true">



	<property name="pattern"
		value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level |%X{CID}| [%logger]  %msg%n" />



	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>${pattern} </pattern>
		</encoder>
	</appender>


	<logger name="de.econsuite.cde" level="DEBUG">
	</logger>


	<logger name="de.intellinet" level="INFO">
	</logger>

<logger name="de.intellinet.commons.rest.logging.RequestResponseLoggerInterceptor" level="TRACE"></logger>
	<logger name="org" level="INFO">
	</logger>
	<logger name="com.zaxxer.hikari" level="INFO">
	</logger>
	
	<root level="NO">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
